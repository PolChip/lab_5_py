import numpy as np # библиотека для работы с  массивами и математическими операциями
import matplotlib.pyplot as plt # библиотека для визуализации

# создаем матрицу 5x5 со случайными целыми числами от 1 до 10
matrix = np.random.randint(1, 11, size=(5, 5))

# создаем фигуру
plt.figure(figsize=(8, 6)) # размеры в дюймах (ширина 8, высота 6)

# строим тепловую карту
heatmap = plt.imshow(matrix, cmap='Pastel1')  # преобразуем числовую матрицу в цветное изображение, plasma это цветовая карта
plt.colorbar(heatmap, label='Значение') # добавляет шкалу значений справа от тепловой карты

# добавляем аннотации (числа в ячейках)
for i in range(matrix.shape[0]): # возвращает количество строк
    for j in range(matrix.shape[1]): # возвращает количество столбцов
        plt.text(j, i, matrix[i, j], # координаты и текст: j (столбец), i (строка)
                 ha='center', va='center', # горизонтальное выравнивание, вертикальное выравнивание
                 color='white' if matrix[i, j] > 5 else 'black')  # автоподбор цвета текста (белый для значений >5, черный для ≤5)

plt.xticks(np.arange(0, 5)) # устанавливает метки на оси x от 0 до 4
plt.yticks(np.arange(0, 5)) # устанавливает метки на оси y от 0 до 4

# добавляем заголовки и подписи осей
plt.title('Тепловая карта матрицы 5x5') 
plt.xlabel('Столбцы') 
plt.ylabel('Строки')

plt.show() # выводим график
